#---------- keybinds ----------#

# panes
keybind = ctrl+alt+shift+k=goto_split:up
keybind = ctrl+alt+shift+j=goto_split:down
keybind = ctrl+alt+shift+l=goto_split:right
keybind = ctrl+alt+shift+h=goto_split:left

keybind = ctrl+p>h=new_split:down
keybind = ctrl+p>v=new_split:right

keybind = super+shift+k=resize_split:up,10
keybind = super+shift+j=resize_split:down,10
keybind = super+shift+l=resize_split:right,10
keybind = super+shift+h=resize_split:left,10
keybind = super+shift+o=equalize_splits


# scrolling in terminal
keybind = alt+k=scroll_page_up
keybind = alt+j=scroll_page_down

keybind = alt+shift+k=jump_to_prompt:-1
keybind = alt+shift+j=jump_to_prompt:1


# others
keybind = ctrl+p>r=reload_config
keybind = ctrl+p>i=inspector:toggle
keybind = ctrl+p>c=open_config

