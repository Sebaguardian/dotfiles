    autoSetupRemote = true
    default = current
    followTags = false

[pull]
    default = current

[init]
    defaultBranch = main

[interactive]
    diffFilter = diff-so-fancy --patch
    singleKey  = true

[log]
    abbrevCommit = true

[rebase]
    autoStash = true
    missingCommitsCheck = warn

[status]
    branch = true
    showStash = true
    showUntrackedFiles = all

